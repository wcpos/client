{
	"name": "@wcpos/desktop",
	"description": "A simple front-end for taking WooCommerce orders at the Point of Sale.",
	"version": "1.0.0-beta.1",
	"main": "dist/index.js",
	"repository": "https://github.com/wcpos/client",
	"private": true,
	"author": {
		"name": "kilbot",
		"email": "support@wcpos.com",
		"url": "https://wcpos.com"
	},
	"scripts": {
		"start": "env-cmd concurrently --kill-others \"yarn start:web\" \"wait-on https://localhost:3000 && tsc -b && electron .\"",
		"start:web": "yarn workspace @wcpos/web start",
		"clean": "shx rm -rf build && rm -rf dist && rm -rf node_modules",
		"prebuild": "yarn workspace @wcpos/web build && copyfiles -u 2 \"../web/build/**/*\" dist",
		"build": "tsc -b",
		"package": "electron-builder -mwl",
		"package:mac": "electron-builder -m"
	},
	"dependencies": {
		"electron-is-dev": "2.0.0",
		"electron-updater": "^4.3.9"
	},
	"devDependencies": {
		"concurrently": "6.3.0",
		"copyfiles": "^2.4.1",
		"electron": "15.3.5",
		"electron-builder": "22.13.1",
		"electron-builder-notarize": "^1.2.0",
		"env-cmd": "10.1.0",
		"wait-on": "6.0.0"
	},
	"build": {
		"appId": "com.wcpos.client",
		"productName": "WooCommerce POS",
		"copyright": "Copyright Â© 2021 ${author}",
		"extends": null,
		"directories": {
			"buildResources": "assets",
			"output": "build"
		},
		"extraMetadata": {
			"name": "wcpos"
		},
		"linux": {
			"icon": "icons/app.icns"
		},
		"afterSign": "electron-builder-notarize",
		"mac": {
			"category": "public.app-category.developer-tools",
			"icon": "icons/app.icns",
			"hardenedRuntime": true
		},
		"win": {
			"icon": "icons/app.ico"
		},
		"files": [
			"assets",
			"dist"
		],
		"protocols": [
			{
				"name": "wcpos",
				"schemes": [
					"wcpos"
				]
			}
		],
		"publish": {
			"provider": "github",
			"releaseType": "release"
		}
	}
}
