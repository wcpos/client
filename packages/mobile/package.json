{
	"name": "@wcpos/mobile",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "env-cmd react-native start",
		"test": "jest",
		"ios": "env-cmd yarn pod:install && react-native run-ios --simulator=\"iPad 12.1\"",
		"android": "react-native run-android",
		"tsc": "tsc",
		"clean": "react-native clean-project-auto",
		"clean:old": "shx rm -rf ios/build && rm -rf android/build && rm -rf node_modules && watchman watch-del-all",
		"clean:ios": "shx rm -rf ios/build && xcodebuild clean",
		"clean:android": "shx rm -rf android/app/build && cd android && ./gradlew clean",
		"clean:metro": "shx rm -rf /tmp/metro-bundler-cache-* && rm -rf rm -rf /tmp/haste-map-react-native-packager-*",
		"clear-cache": "npm run clear-xcode-cache && watchman watch-del-all && rm -rf $TMPDIR/react-* && npm cache verify && rm -rf node_modules/ && npm run clear-npm-pod-cache && rm -rf ios/build/ && cd android && ./gradlew clean && cd .. && npm run start-no-cache",
		"clear-xcode-cache": "cd ios && bash ../resetXcode.sh && cd ..",
		"clear-npm-pod-cache": "rm -rf ios/Podfile.lock && rm -rf package-lock.json && npm run npm-pod-install",
		"npm-pod-install": "npm install && npm run pod-install",
		"pod-install": "cd ios/ && pod install && cd ..",
		"start-no-cache": "npm start -- --reset-cache",
		"studio": "open -a /Applications/Android\\ Studio.app ./android/",
		"xcode": "open ios/wcpos.xcodeproj",
		"postversion": "react-native-version --never-amend",
		"analyze:android": "react-native-bundle-visualizer --platform android --entry-file ./index.js --reset-cache",
		"analyze:ios": "react-native-bundle-visualizer --platform ios --entry-file ./index.js --reset-cache",
		"pod:install": "cd ios/ && pod install",
		"build:android:release": "cd android && ./gradlew assembleRelease"
	},
	"dependencies": {
		"@react-native-community/netinfo": "6.0.4",
		"@sentry/react-native": "3.2.1",
		"base-64": "1.0.0",
		"events": "3.3.0",
		"expo-haptics": "10.1.0",
		"pouchdb-adapter-react-native-sqlite": "3.0.1",
		"react-native": "0.66.1",
		"react-native-device-info": "8.4.5",
		"react-native-gesture-handler": "1.10.3",
		"react-native-get-random-values": "^1.7.0",
		"react-native-linear-gradient": "2.5.6",
		"react-native-reanimated": "2.2.3",
		"react-native-safe-area-context": "3.3.2",
		"react-native-screens": "3.9.0",
		"react-native-sqlite-2": "3.4.1",
		"react-native-svg": "12.1.1",
		"react-native-unimodules": "^0.14.10",
		"react-native-webview": "11.14.2",
		"rxdb": "10.2.2"
	},
	"devDependencies": {
		"@types/react-native": "0.66.1",
		"babel-plugin-transform-inline-environment-variables": "0.4.3",
		"env-cmd": "10.1.0",
		"metro-react-native-babel-preset": "0.66.2",
		"react-native-bundle-visualizer": "3.0.0",
		"react-native-clean-project": "^3.6.4",
		"react-native-svg-transformer": "0.14.3",
		"react-native-version": "4.0.0"
	}
}
